#################################################################

###  http://ns.peterkrantz.se/flashcards/2018#mediaItem
:mediaItem rdf:type owl:DatatypeProperty ;
           rdfs:subPropertyOf owl:topDataProperty ;
           rdfs:domain :Card ;
           rdfs:comment "Media item data for a audio, an image or other types of media."@en ;
           rdfs:label "media"@en .


###  http://ns.peterkrantz.se/flashcards/2018#relatedWork
:relatedWork rdf:type owl:DatatypeProperty ;
             rdfs:subPropertyOf owl:topDataProperty ;
             rdfs:domain :Stack ;
             rdfs:comment "A related creative work as e.g. a book, a book chapter, a movie or song. This property can be used to connect a stack of cards to a vocabulary from a chapter in a language textbook."@en ;
             rdfs:label "related work"@en .


###  http://ns.peterkrantz.se/flashcards/2018#sortOrder
:sortOrder rdf:type owl:DatatypeProperty ;
           rdfs:domain :Card ;
           rdfs:range xsd:positiveInteger ;
           rdfs:comment "The initial card sort order expressed as an integer value. The sort order should be used as a suggestion, e.g. when no other sort order exists, and may be ignored by users and tools."@en ;
           rdfs:label "sort order"@en .


###  http://ns.peterkrantz.se/flashcards/2018#text
:text rdf:type owl:DatatypeProperty ;
      rdfs:domain :Card ;
      rdfs:comment "Text content for this object."@en ;
      rdfs:label "text"@en .


#################################################################
#    Classes
#################################################################

###  http://ns.peterkrantz.se/flashcards/2018#Answer
:Answer rdf:type owl:Class ;
        <http://purl.org/dc/terms/isPartOf> :Card ;
        rdfs:comment "An answer to a related test."@en ;
        rdfs:label "Answer"@en .


###  http://ns.peterkrantz.se/flashcards/2018#Card
:Card rdf:type owl:Class ;
      <http://purl.org/dc/terms/isPartOf> :Stack ;
      rdfs:comment "A physical or virtual card bearing information such as words, images or numbers, on either or both sides. Used in classroom drills or in private study. The card has an associated test and an answer."@en ;
      rdfs:label "Card"@en .


###  http://ns.peterkrantz.se/flashcards/2018#Stack
:Stack rdf:type owl:Class ;
       <http://purl.org/dc/terms/hasPart> :Card ;
       rdfs:comment "A stack represents a collection of cards and is typically used to group cards belonging to a topic being studied. E.g. a collection of cards containing vocabulary for a chapter in a language textbook."@en ;
       rdfs:label "Stack"@en .


###  http://ns.peterkrantz.se/flashcards/2018#Test
:Test rdf:type owl:Class ;
      <http://purl.org/dc/terms/isPartOf> :Card ;
      rdfs:comment "The information the user is trying to memorize. Representing the front side of a physical card."@en ;
      rdfs:label "Test"@en .


