    <!-- http://ns.peterkrantz.se/flashcards/2018#Answer -->

    <owl:Class rdf:about="http://ns.peterkrantz.se/flashcards/2018#Answer">
        <dct:isPartOf rdf:resource="http://ns.peterkrantz.se/flashcards/2018#Card"/>
        <rdfs:comment xml:lang="en">An answer to a related test.</rdfs:comment>
        <rdfs:label xml:lang="en">Answer</rdfs:label>
    </owl:Class>
    


    <!-- http://ns.peterkrantz.se/flashcards/2018#Card -->

    <owl:Class rdf:about="http://ns.peterkrantz.se/flashcards/2018#Card">
        <dct:isPartOf rdf:resource="http://ns.peterkrantz.se/flashcards/2018#Stack"/>
        <rdfs:comment xml:lang="en">A physical or virtual card bearing information such as words, images or numbers, on either or both sides. Used in classroom drills or in private study. The card has an associated test and an answer.</rdfs:comment>
        <rdfs:label xml:lang="en">Card</rdfs:label>
    </owl:Class>
    


    <!-- http://ns.peterkrantz.se/flashcards/2018#Stack -->

    <owl:Class rdf:about="http://ns.peterkrantz.se/flashcards/2018#Stack">
        <dct:hasPart rdf:resource="http://ns.peterkrantz.se/flashcards/2018#Card"/>
        <rdfs:comment xml:lang="en">A stack represents a collection of cards and is typically used to group cards belonging to a topic being studied. E.g. a collection of cards containing vocabulary for a chapter in a language textbook.</rdfs:comment>
        <rdfs:label xml:lang="en">Stack</rdfs:label>
    </owl:Class>
    


    <!-- http://ns.peterkrantz.se/flashcards/2018#Test -->

    <owl:Class rdf:about="http://ns.peterkrantz.se/flashcards/2018#Test">
        <dct:isPartOf rdf:resource="http://ns.peterkrantz.se/flashcards/2018#Card"/>
        <rdfs:comment xml:lang="en">The information the user is trying to memorize. Representing the front side of a physical card.</rdfs:comment>
        <rdfs:label xml:lang="en">Test</rdfs:label>
    </owl:Class>
    


